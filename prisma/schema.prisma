generator client {
  provider = "prisma-client-js"
}

model Buyer {
  id           String   @id @default(uuid())
  fullName     String   @db.VarChar(80)
  email        String?  // optional
  phone        String   @db.VarChar(15)
  city         City
  propertyType PropertyType
  bhk          BHK?
  purpose      Purpose
  budgetMin    Int?
  budgetMax    Int?
  timeline     Timeline
  source       Source
  status       Status   @default(New)
  notes        String?  @db.Text
  tags         String[] // Postgres array or JSON, depending on provider
  ownerId      String
  updatedAt    DateTime @updatedAt
  buyerHistory BuyerHistory[]

  @@map("buyers")
}

model BuyerHistory {
  id        String   @id @default(uuid())
  buyerId   String
  changedBy String
  changedAt DateTime @default(now())
  diff      Json

  buyer     Buyer    @relation(fields: [buyerId], references: [id])

  @@map("buyer_history")
}

enum City {
  Chandigarh
  Mohali
  Zirakpur
  Panchkula
  Other
}

enum PropertyType {
  Apartment
  Villa
  Plot
  Office
  Retail
}

enum BHK {
  One
  Two
  Three
  Four
  Studio
}

enum Purpose {
  Buy
  Rent
}

enum Timeline {
  ThreeMonths
  SixMonths
  MoreThanSixMonths
  Exploring
}

enum Source {
  Website
  Referral
  WalkIn
  Call
  Other
}

enum Status {
  New
  Qualified
  Contacted
  Visited
  Negotiation
  Converted
  Dropped
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
